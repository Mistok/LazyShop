div(class='col col-md-4')
    div(class='card')
        a(
            class='card-link'
            href='goods?id='+val['id']
            )
            h3(class='card-title card-center') #{val['name']}
            img(
                src='images/' + val['image'],
                class='card-images'
            )
            p(class='text-center') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} uah
        ul(class='card-actions')
            li
                button(
                    data-goods_id = val['id'],
                    class='btn btn-success add-to-cart'
                ) to cart